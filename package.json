{
  "name": "opencollective-email",
  "version": "1.0.0",
  "description": "The email service for transparent and inclusive open collectives",
  "main": "index.js",
  "scripts": {
    "test": "sh ./scripts/test.sh",
    "dev": "nodemon --exec babel-node -- src/server/index.js",
    "db:reset": "sh ./scripts/resetdb.sh",
    "db:migrate": "sh ./scripts/sequelize.sh db:migrate",
    "db:migrate:dev": "sh ./scripts/sequelize.sh -l db:migrate",
    "db:migrate:dev:undo": "sh ./scripts/sequelize.sh -l db:migrate:undo",
    "start": "NODE_ENV=production node build/server",
    "build:clean": "rm -rf build",
    "build:server": "babel --copy-files ./src --out-dir ./build --ignore src/**/__tests__/*,src/.next/*",
    "build:next": "next build build",
    "build:langs": "rm -rf build/messages && babel src/**/*.js > /dev/null && babel src/apps/**/*.js > /dev/null && babel-node scripts/translate.js",
    "build": "npm run build:server && npm run build:next",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:quiet": "npm run lint -- --quiet",
    "prettier": "prettier src/**/*.js test/**/*.js --write",
    "clean": "rm -rf dist src/.next",
    "postinstall": "sh ./scripts/postinstall.sh",
    "maildev": "./node_modules/.bin/maildev -o",
    "simulator": "babel-node scripts/simulator.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opencollective/opencollective-email.git"
  },
  "keywords": [
    "email",
    "mailing",
    "newsletter",
    "citizen",
    "initiatives",
    "open",
    "collective"
  ],
  "author": "Xavier Damman <@xdamman>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/opencollective/opencollective-email/issues"
  },
  "homepage": "https://github.com/opencollective/opencollective-email#readme",
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/runtime": "^7.2.0",
    "@mdx-js/loader": "^0.16.6",
    "@mdx-js/mdx": "^0.16.6",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-mdx": "^1.2.0",
    "apollo": "^2.1.8",
    "apollo-cache-inmemory": "^1.3.12",
    "apollo-client": "^2.4.8",
    "apollo-errors": "^1.9.0",
    "apollo-server-express": "^2.3.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-import": "^1.11.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-node": "^2.1.0",
    "body-parser": "^1.18.3",
    "clean-tag": "^2.0.2",
    "config": "^3.0.1",
    "cross-fetch": "^3.0.0",
    "debug": "^4.1.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "graphql": "^14.0.2",
    "graphql-type-json": "^0.2.1",
    "intl": "^1.2.5",
    "jsonwebtoken": "^8.4.0",
    "limax": "^1.7.0",
    "lodash": "^4.17.11",
    "moment": "^2.23.0",
    "next": "^7.0.2",
    "next-routes": "^1.4.2",
    "nodemailer": "^4.7.0",
    "nodemon": "^1.18.9",
    "nprogress": "^0.2.0",
    "oy-vey": "^0.11.1",
    "pg": "^7.7.1",
    "prop-types": "^15.6.2",
    "react": "^16.7.0",
    "react-apollo": "^2.3.3",
    "react-dom": "^16.7.0",
    "react-intl": "^2.7.2",
    "react-moment": "^0.8.4",
    "react-spinkit": "^3.0.0",
    "remark-emoji": "^2.0.2",
    "remark-images": "^0.16.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "semantic-ui-react": "^0.84.0",
    "sequelize": "^4.42.0",
    "serve-favicon": "^2.5.0",
    "styled-components": "^4.1.3",
    "styled-jsx": "^3.1.3",
    "styled-system": "^3.1.11",
    "subscriptions-transport-ws": "^0.9.15",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.2.3",
    "babel-plugin-react-intl": "^3.0.1",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-preset-env": "^1.7.0",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^23.6.0",
    "maildev": "^1.0.0-rc3",
    "nock": "^10.0.5",
    "prettier": "^1.15.3",
    "raw-loader": "^1.0.0",
    "sequelize-cli": "^5.4.0",
    "sinon": "^7.2.2"
  },
  "nodemonConfig": {
    "watch": [
      "src/lib",
      "src/server"
    ]
  }
}
